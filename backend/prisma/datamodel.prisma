type Post {
  id: ID! @unique
  car: Car!
  user: User!
  price: Int!
  location: String!
  avatar: String
  photos: [String]!
  description: String
}

type User {
  id: ID! @unique
  posts: [Post!]!
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission!]!
}

